<html>
  <head>
    <%= stylesheet_link_tag "admin/layout" %>
    <%= stylesheet_link_tag "admin/index" %>
    <%= stylesheet_link_tag "admin/create" %>
    <%= stylesheet_link_tag "admin/gallery" %>
    <%= stylesheet_link_tag "admin/user" %>
    <%= stylesheet_link_tag "admin/main" %>
    <%= stylesheet_link_tag "admin/jquery-ui-css/jquery-ui-1.8.9.custom" %>
    <%= javascript_include_tag 'jquery-1.4.4' %>
    <%= javascript_include_tag 'jquery-ui-1.8.9.custom.min' %>
    <%= javascript_include_tag 'jquery.ui.core' %>
    <%= javascript_include_tag 'jquery.ui.datepicker' %>
  </head>
  <body>
    <div id='main_container'>
      <div id='admin_title'>
		<div id='logo_div'><img src='/images/access_logo.png' /></div>
        <div id='title_div'>Access Nightlife Admin</div>
      </div>
	  <div class='clear'></div>
     <div id='admin_nav'>
       <div id='admin_nav_left'>
         <a href='/admin/main'>Main</a> | 
         <a href='/admin/event'>Event</a> | 
         <a href='/admin/gallery'>Gallery</a> | 
         <a href='/admin/user'>Users</a> | 
         <a href='/admin/affiliate'>Affiliates</a> | 
       </div>
       <div id='admin_nav_right'>
         <%= @current_user.email -%>
         <a href='/logout'>Logout</a>
       </div>
     </div>
     <div class='clear'></div>
     <div id='admin_body'>
	      <div id='admin_frame_top'></div>
	      <div id='admin_frame_middle'>
         <div id='admin_frame_middle_container'>
		         <div id='title'><%= @title %></div>
             <%= yield %>
         </div>
       </div>
	      <div id='admin_frame_bottom'></div>
     </div>
    </div>
  </body>
</html>
