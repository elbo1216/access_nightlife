<div id='create_gallery_container'>
   <% form_tag "/admin/gallery/#{action}", {:multipart => true, :style => "margin:0px"} do %>
	  <table id='form_table'>
     <tr>
       <td>Gallery Name:</td>
       <td><%= text_field_tag :gallery_name, gallery.name %></td>
     </tr>
     <tr>
       <td>Upload Logo:</td>
       <td><%= file_field_tag :gallery_logo_image %></td>
     </tr>
     <tr>
       <td>Event ID:</td>
       <td><%= text_field_tag :event_id, gallery.event_id%></td>
     </tr>
     <tr>
       <td>Event Name (Last 50 events displayed):</td>
       <% options = @events.map {|e| "<option value='#{e.id}'>#{e.event_name}</option>"}.unshift('<option value=''></option>').join()-%>
       <td><%= select_tag :event, options %></td>
     </tr>
     <tr>
       <td>Short Description:</td>
       <td><%= text_field_tag :description_short, gallery.description_short %></td>
     </tr>
     <tr>
       <td>Long Description:</td>
       <td><%= text_field_tag :description_long, gallery.description_long %></td>
     </tr>
     <tr>
       <td>Make as current slideshow:</td>
       <td><%= check_box_tag :is_current_slideshow, 1, gallery.is_current_slideshow %></td>
     </tr>
     <tr>
       <td colspan=2><%= submit_tag "#{action.capitalize} Gallery" %></td>
     </tr>
   </table>
   <%= hidden_field_tag 'id', params[:id] -%>
   <%= hidden_field_tag 'load_page', action -%>
   <% end -%>
</div>
