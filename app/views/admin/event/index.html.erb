</div>
<div id='all_events'>
  <h1>All Events</h1>
  <%= link_to 'Create Event', :controller => 'event', :action => 'create' %>
  <br/>
  <table>
    <tr>
      <th>Event Id</th>
      <th>Event Name</th>
      <th>Event Start Date</th>
      <th>Event Start Time</th>
      <th>Event Venue</th>
      <th>Event Notes 1</th>
      <th>Event Notes 2</th>
      <th>Event Notes 3</th>
      <th></th>
      <th></th>
    </tr>
    <% i = 0 %>
    <% @events.each do |e| %>
      <% row_class = (i % 2 == 1) ? 'odd' : 'even' %>
      <% i += 1%>
      <tr class='<%= row_class %>'>
        <%= "<td style='text-align:center;'>#{e.id}</td>" %>
        <%= "<td>#{e.event_name}</td>" %>
        <%= "<td>#{e.event_start_date}</td>" %>
        <%= "<td>#{e.event_start_time.strftime('%i:%M %p') if e.event_start_time}</td>" %>
        <%= "<td>#{e.venue}</td>" %>
        <%= "<td>#{e.event_notes1}</td>" %>
        <%= "<td>#{e.event_notes2}</td>" %>
        <%= "<td>#{e.event_notes3}</td>" %>
        <%= "<td>#{link_to 'edit', :action => 'update', :id => e.id}</td>" %>
        <%= "<td>#{link_to 'delete', :action => 'delete', :id => e.id}</td>" %>
      </tr>
    <% end %>
  </table>
</div>

