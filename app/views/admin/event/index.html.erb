<% @title='Events Page' %>
<!-- Some predefined variables for the page -->
<% 
 @options_for_event_select = ""
  @events.each do |e| 
    @options_for_event_select = @options_for_event_select + "<option value=#{e.id}>#{e.event_name}</option>"
  end 
-%>

<script type="text/javascript" src="/javascripts/prototype.js"></script>
<script type="text/javascript" src="/javascripts/scriptaculous.js"></script>
<script>
	jQuery.noConflict();
	function changeUpcomingEvent(id) {
		jQuery('#cd_links_'+id).hide();
		jQuery('#sc_links_'+id).show();
		jQuery('#event_select_'+id).show();
		jQuery('#event_name_'+id).hide();
	}

	function cancelUpcomingEventSave(id) {
		jQuery('#cd_links_'+id).show();
		jQuery('#sc_links_'+id).hide();
		jQuery('#event_select_'+id).hide();
		jQuery('#event_name_'+id).show();

	}

	function saveUpcomingEventChange(id) {
		jQuery('#cd_links_'+id).show();
		jQuery('#sc_links_'+id).hide();
		jQuery('#event_select_'+id).hide();
		jQuery('#event_name_'+id).show();
		jQuery.ajax({
					 url: '/admin/event/change_upcoming_event/' + id,
					 data:"event_id="+jQuery('#event_select_'+id).val(),
					 success:function(msg) {
						jQuery('#event_name_'+id).html(msg);
					 }
				    });
	}

 function removeEvent(id) {
  jQuery.ajax({
                url: '/admin/event/remove_upcoming_event/' + id,
                success:function(msg) {
               	jQuery('#event_name_'+id).html("");
               }
              });
 }
</script>
<div id='upcoming_events_admin_div'>
<div id='upcoming_asian_events'>
  <h1>Upcoming Asian Events</h1>
  <table>
    <tbody id='upcoming_asian_event_table'> 
      <tr>
        <th>Event Position</th>
        <th>Event Name</th>
        <th></th>
      </tr>
      <% for i in 0..UpcomingEvent::MAX_EVENTS-1 %>
        <% row_class = (i % 2 == 1) ? 'odd' : 'even' %>
        <tr class='<%= row_class %>'>
          <%= "<td style='text-align:center;'>#{@upcoming_asian_events[i].event_order}</td>" %>
          <td style='width:270px'>
            <%= select_tag "event_select_#{@upcoming_asian_events[i].id}", @options_for_event_select, :class => 'event_select' -%>
            <%  event_name = @upcoming_asian_events[i].event.blank? ? nil : @upcoming_asian_events[i].event.event_name -%>
             <%= "<span id='event_name_#{@upcoming_asian_events[i].id}'>#{event_name}</span>" -%>
          </td>
          <td>
            <div class='cd_links' id='cd_links_<%= @upcoming_asian_events[i].id -%>'>
              <a href='javascript:changeUpcomingEvent(<%= @upcoming_asian_events[i].id-%>)'>Change</a>
              <a href='javascript:removeEvent(<%= @upcoming_asian_events[i].id-%>)'>Delete</a>
            </div>
            <div class='sc_links' id='sc_links_<%= @upcoming_asian_events[i].id -%>'>
              <a href='javascript:saveUpcomingEventChange(<%= @upcoming_asian_events[i].id-%>)'>Save</a>
              <a href='javascript:cancelUpcomingEventSave(<%= @upcoming_asian_events[i].id-%>)'>Cancel</a>
            </div>
             
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
